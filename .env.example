# Portfolio Environment Variables
# Copy this file to .env.local and fill in your actual values

# Site Configuration
VITE_SITE_URL=https://yourportfolio.com
VITE_SITE_NAME="Your Portfolio Name"

# Contact Form (if using external service like EmailJS, Formspree, etc.)
VITE_CONTACT_SERVICE_ID=your_service_id
VITE_CONTACT_TEMPLATE_ID=your_template_id
VITE_CONTACT_PUBLIC_KEY=your_public_key

# Analytics (if using Google Analytics, Plausible, etc.)
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Social Media Links (optional - can also be configured in portfolio.json)
VITE_GITHUB_URL=https://github.com/yourusername
VITE_LINKEDIN_URL=https://linkedin.com/in/yourusername
VITE_TWITTER_URL=https://twitter.com/yourusername

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_CONTACT_FORM=true

# Performance Settings
VITE_LAZY_LOADING=true
VITE_IMAGE_OPTIMIZATION=true

# Development Settings
VITE_DEBUG_MODE=false
VITE_SHOW_PERFORMANCE_METRICS=false
